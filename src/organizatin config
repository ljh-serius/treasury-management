rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /organizations/{organizationId} {
      allow read, update, delete: if request.auth != null && request.auth.token.organization_id == organizationId;
      
      match /users/{userId} {
        allow read, write: if request.auth != null && request.auth.token.organization_id == organizationId;
      }
    }
  }
}
